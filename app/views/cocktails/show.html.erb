<div class="container mt-5">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @doses.each do |dose| %>
      <li>
        <%= dose.ingredient.name %>
        - <%= dose.description %>
        - <%= link_to 'DELETE', dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>
  <hr>
  <%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %>
  <hr>
  <%= link_to 'Back to List', root_path %>
</div>
